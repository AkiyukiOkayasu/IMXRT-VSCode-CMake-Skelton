    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceRoot}",
            "executable": "./FLEXSPI_NOR_SDRAM_DEBUG/hello_world.elf",
            "name": "Debug Microcontroller",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "jlink",
            "serverpath": "/Applications/SEGGER/JLink/JLinkGDBServerCLExe",
            "armToolchainPath": "/usr/local/Cellar/arm-none-eabi-gcc/10.3-2021.07/bin",
